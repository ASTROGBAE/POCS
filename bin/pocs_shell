    def do_exit(self, *arg):
        """ Exits PanShell """
        for name, proc in self.procs.items():
            print("Shutting down {}".format(name))
            # proc.join(10)
            # if proc.is_alive():
            proc.terminate()

        print("Bye! Thanks!")
        return True

    def emptyline(self):
        pass
        # self.do_status()

##################################################################################################
# Private Methods
##################################################################################################

    def _send_message(self, channel, msg):
        if self.message_publisher:
            self.message_publisher.send_message(channel, msg)
        else:
            console.color_print("Messaging not started. See start_messaging", "red")


if __name__ == '__main__':
    import os
    import sys

    if not os.getenv('POCS'):
        sys.exit("Please set the POCS environment variable.")

    PocsShell().cmdloop()
